                android:layout_marginStart="39dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="228dp"
                android:text="@string/et_fechaPago1"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
